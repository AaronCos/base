<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sswh.platform.dao.IUsersDao">

    <insert id="registerUser" parameterType="com.sswh.platform.entity.Users" >
	<!--<selectKey resultType="java.lang.Integer" keyProperty="iid" keyColumn="t_iid">
		select t_iid from
	</selectKey>-->
	INSERT INTO users(username,password,password_salt)
	VALUES(#{username},#{password},#{password_salt});
	</insert>

	<delete id="deleteByUserId" parameterType="int">
		DELETE FROM USERS
		<where>
			iid=#{iid}
		</where>
	</delete>

	<select id="findByUserName" parameterType="string" resultType="int">
		SELECT COUNT(*) FROM USERS
		<where>
			username = #{username}
		</where>
	</select>



</mapper>
